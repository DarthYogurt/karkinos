<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.karkinos.pile"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.karkinos.pile.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.karkinos.pile.DealPage"
            android:label="@string/app_name"
            android:parentActivityName="com.karkinos.pile.MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.karkinos.croupon.MainActivity" />
        </activity>
        <activity
            android:name="com.karkinos.pile.NominatePage"
            android:label="@string/app_name"
            android:parentActivityName="com.karkinos.pile.MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.karkinos.croupon.MainActivity" />
        </activity>
        <activity
            android:name="com.karkinos.pile.ChampionPage"
            android:label="@string/app_name"
            android:parentActivityName="com.karkinos.pile.MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.karkinos.pile.MainActivity" />
        </activity>
    </application>

</manifest>
