<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".DealPage" >

   <RelativeLayout
        android:id="@+id/topContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#66ccff"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
       	android:paddingLeft="10dp"
        android:paddingRight="10dp" >
        
      	<ProgressBar
      	    android:id="@+id/progressBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
        	style="@android:style/Widget.ProgressBar.Horizontal" />
      	
      	<TextView
            android:id="@+id/txtProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/progressBar"
            android:text="@string/txtProgressBar"
            android:textColor="#fff"
            android:textStyle="bold" />
      	
      	<TextView 
      	    android:id="@+id/txtSupporters"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@id/txtProgressBar"
	        android:layout_toRightOf="@id/txtProgressBar"
	        android:paddingLeft="5dp"
	        android:text="300/500 Supporters"
	        android:textColor="#fff"
	        android:textStyle="bold" />
        
      	<TextView
            android:id="@+id/txtTimeLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtProgressBar"
            android:text="@string/txtTimeLeft"
            android:textColor="#fff"
            android:textStyle="bold" />
      	
        <TextView
            android:id="@+id/txtCountDownTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/txtTimeLeft"
            android:layout_toRightOf="@id/txtTimeLeft"
            android:paddingLeft="5dp"
            android:textColor="#fff"
            android:textStyle="bold" />

        <Button 
            android:id="@+id/btnJoinCause"
            android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
       		android:layout_below="@id/progressBar"
       		android:layout_alignParentRight="true"
            android:text="@string/txtJoinCause"
            android:background="@drawable/btn_join_cause"
            style="@style/ButtonText" />

    </RelativeLayout>
    
   	<View 
		android:layout_width="fill_parent"
		android:layout_height="1dp"
		android:background="#fff" />
    
	<ScrollView
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="#fff" >
	    
	    <LinearLayout
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="vertical" >
	        
	        <ImageView 
		        android:src="@drawable/test_image"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:adjustViewBounds="true"
		        android:contentDescription="@string/txtDealImage" />
	        
	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            android:padding="14dp" >
	            
	            <TextView 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:text="Low Price of $200!" />
	            
	            <TextView 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:text="Deal One"
	                style="@style/DealPageHeading" />
	            
	            <View 
					android:layout_width="fill_parent"
					android:layout_height="2dp"
					android:background="#66ccff" />
	            
	            <TextView 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:text="@string/dummyText" />
	            
	            
	        </LinearLayout>

	    </LinearLayout>
	    
	</ScrollView>

</LinearLayout>
