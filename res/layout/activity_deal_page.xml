<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".DealPage"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#fff" >

	<!-- TOP CONTAINER -->
   	<RelativeLayout
        android:id="@+id/topContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#66ccff"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
       	android:paddingLeft="10dp"
        android:paddingRight="10dp" >
        
      	<ProgressBar
      	    android:id="@+id/progressBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
        	style="@android:style/Widget.ProgressBar.Horizontal" />
      	
      	<TextView
            android:id="@+id/txtProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/progressBar"
            android:text="@string/txtProgressBar"
            android:textColor="#fff"
            android:textStyle="bold" />
      	
      	<TextView 
      	    android:id="@+id/txtSupporters"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@id/txtProgressBar"
	        android:layout_toRightOf="@id/txtProgressBar"
	        android:paddingLeft="5dp"
	        android:text="300/500 Supporters"
	        android:textColor="#fff"
	        android:textStyle="bold" />
        
      	<TextView
            android:id="@+id/txtTimeLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtProgressBar"
            android:text="@string/txtTimeLeft"
            android:textColor="#fff"
            android:textStyle="bold" />
      	
        <TextView
            android:id="@+id/txtCountDownTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/txtTimeLeft"
            android:layout_toRightOf="@id/txtTimeLeft"
            android:paddingLeft="5dp"
            android:textColor="#fff"
            android:textStyle="bold" />

        <Button 
            android:id="@+id/btnJoinCause"
            android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
       		android:layout_below="@id/progressBar"
       		android:layout_alignParentRight="true"
            android:text="@string/txtJoinCause"
            android:background="@drawable/btn_join_cause"
            style="@style/ButtonText" />

    </RelativeLayout>
	<!-- END TOP CONTAINER -->
    
   	<View 
		android:layout_width="fill_parent"
		android:layout_height="1dp"
		android:background="#fff" />
    
	<!-- BOTTOM CONTAINER -->
	<ScrollView
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" >
	    
	    <LinearLayout
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="vertical" >
	        
	        <ImageView 
		        android:src="@drawable/test_image"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:adjustViewBounds="true"
		        android:contentDescription="@string/txtDealImage" />
	        
	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            android:padding="14dp" >
	            
				<!-- PRICES SECTION -->
				<TextView 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:text="Price"
	                style="@style/DealPageHeading" />
	            
	            <View 
					android:layout_width="fill_parent"
					android:layout_height="2dp"
					android:background="#66ccff" />	  

	            <TableLayout
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:paddingBottom="20dp" >
	                <TableRow >
	                    <TextView
			                android:layout_width="0dp"
			                android:layout_height="wrap_content"
			                android:layout_weight="2"
			                android:textStyle="bold"
			                android:textColor="#009933"
			                android:text="Our Price:" />
	                
		                <TextView
			                android:layout_width="0dp"
			                android:layout_height="wrap_content"
			                android:layout_weight="1"
			                android:textStyle="bold"
			                android:textColor="#009933"
			                android:text="$150" />
	                </TableRow>
	                <TableRow >
	                    <TextView
			                android:layout_width="0dp"
			                android:layout_height="wrap_content"
			                android:layout_weight="2"
			                android:text="Amazon:" />
	                
		                <TextView
			                android:layout_width="0dp"
			                android:layout_height="wrap_content"
			                android:layout_weight="1"
			                android:text="$200" />
	                </TableRow>
	                <TableRow >
	                    <TextView
			                android:layout_width="0dp"
			                android:layout_height="wrap_content"
			                android:layout_weight="2"
			                android:text="eBay:" />
	                
		                <TextView
			                android:layout_width="0dp"
			                android:layout_height="wrap_content"
			                android:layout_weight="1"
			                android:text="$180" />
	                </TableRow>
	            </TableLayout>
				<!-- END PRICES SECTION -->
	            
	            <!-- DESCRIPTION SECTION -->
	            <TextView 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:text="Description"
	                style="@style/DealPageHeading" />
	            
	            <View 
					android:layout_width="fill_parent"
					android:layout_height="2dp"
					android:background="#66ccff" />
	            
	            <TextView 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:text="@string/dummyText"
	                android:paddingBottom="20dp" />
	            <!-- END DESCRIPTION SECTION -->
	            
	            <!-- SPECIFICS SECTION -->
	            <TextView 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:text="Specifics"
	                style="@style/DealPageHeading" />
	            
	            <View 
					android:layout_width="fill_parent"
					android:layout_height="2dp"
					android:background="#66ccff" />
	            
	            <TextView 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:text="@string/dummyText"
	                android:paddingBottom="20dp" />
	            <!-- END SPECIFICS SECTION -->
	            
	            <!-- Q&A SECTION -->
	            <TextView 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:text="Q &amp; A"
	                style="@style/DealPageHeading" />
	            
	            <View 
					android:layout_width="fill_parent"
					android:layout_height="2dp"
					android:background="#66ccff" />
	            
	            <TextView 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:text="@string/dummyText"
	                android:paddingBottom="20dp" />
	            <!-- END Q&A SECTION -->
	            
	        </LinearLayout>

	    </LinearLayout>
	    
	</ScrollView>
	<!-- END BOTTOM CONTAINER -->

</LinearLayout>
