<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
 	xmlns:tools="http://schemas.android.com/tools"
	tools:context=".ChampionPageActivity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
        
    <LinearLayout
    	android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    
        <!-- CHAMPION NAME SECTION -->
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#66ccff"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" >
        
	        <TextView
	            android:id="@+id/txtChampion"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:shadowColor="#000"
				android:shadowDx="3"
				android:shadowDy="3"
				android:shadowRadius="5"
				android:textSize="28sp"
				android:textColor="#fff"
				android:text="@string/champion" />
	        
			<TextView
		    	android:id="@+id/txtChampionName"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignBaseline="@id/txtChampion"
		        android:layout_toRightOf="@id/txtChampion"
		        android:paddingLeft="6dp"
		        android:shadowColor="#000"
				android:shadowDx="3"
				android:shadowDy="3"
				android:shadowRadius="5"
		        android:textSize="28sp"
		  		android:textColor="#fff"
		   		android:text="DeeRock" />
			
		</RelativeLayout>
		<!-- END CHAMPION NAME SECTION -->
		
		<LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:padding="14dp" >
		
		    <ImageView
		        android:src="@drawable/no_user_pic"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:paddingBottom="14dp"
		        android:contentDescription="@string/championPicture" />
		
		    <!-- CHAMPION INFO SECTION -->
			<TableLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:stretchColumns="*"
				android:gravity="center"
				android:paddingBottom="20dp" >
				<TableRow>
				    <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="@string/rank" />
				    
				    <TextView
	                    android:id="@+id/txtRank"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="21" />
			    </TableRow>
			    <TableRow>
				    <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="@string/championedDeals" />
				    
				    <TextView
	                    android:id="@+id/txtChampionedDeals"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="7" />
			    </TableRow>
			    <TableRow>
				    <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="@string/location" />
				    
				    <TextView
	                    android:id="@+id/txtChampionLocation"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="San Francisco, CA" />
			    </TableRow>
			</TableLayout>
			<!-- END CHAMPION INFO SECTION -->
        
        </LinearLayout>
     
    </LinearLayout>
        
</ScrollView>
