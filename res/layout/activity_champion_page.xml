<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
 	xmlns:tools="http://schemas.android.com/tools"
	tools:context=".ChampionPage"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
        
    <LinearLayout
    	android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#66ccff"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" >
        
	        <TextView
	            android:id="@+id/txtChampion"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:shadowColor="#000"
				android:shadowDx="3"
				android:shadowDy="3"
				android:shadowRadius="5"
				android:textSize="28sp"
				android:textColor="#fff"
				android:text="@string/champion" />
	        
			<TextView
		    	android:id="@+id/txtChampionName"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignBaseline="@id/txtChampion"
		        android:layout_toRightOf="@id/txtChampion"
		        android:paddingLeft="6dp"
		        android:shadowColor="#000"
				android:shadowDx="3"
				android:shadowDy="3"
				android:shadowRadius="5"
		        android:textSize="28sp"
		  		android:textColor="#fff"
		   		android:text="DeeRock" />
		
		</RelativeLayout>
     
    </LinearLayout>
        
</ScrollView>
