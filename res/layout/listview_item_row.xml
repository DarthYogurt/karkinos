<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp" >
        
    <ImageView 
        android:id="@+id/imgDealImage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:adjustViewBounds="true"
        android:contentDescription="@string/dealImage" />
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
        
        <TextView 
	        android:id="@+id/txtDealDesc"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_alignParentLeft="true"
	        android:textStyle="bold"
	        android:textSize="24sp"
	        android:textColor="#fff"
	        android:paddingLeft="6dp"
	        android:background="#4d000000" />
        
	    <TextView 
	        android:id="@+id/txtSupporters"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentLeft="true"
       		android:textStyle="bold"
	        android:textSize="20sp"
	        android:textColor="#e6e600"
	        android:paddingLeft="6dp"
	        android:background="#4d000000" />
    
	    <TextView 
	        android:id="@+id/txtDealPrice"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
	        android:layout_alignParentRight="true"
	        android:textStyle="bold"
	        android:textSize="20sp"
	        android:textColor="#00e600"
	        android:paddingRight="6dp" />
	    
	    <TextView 
	        android:id="@+id/txtRegularPrice"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			android:layout_alignBaseline="@id/txtDealPrice"
	        android:layout_toLeftOf="@id/txtDealPrice"
	        android:textStyle="bold"
	        android:textSize="20sp"
	        android:textColor="#cc2929"
	        android:paddingRight="4dp" />

    </RelativeLayout>
    
</FrameLayout>
