<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".NominatePage"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="14dp"
    android:background="#fff" >

	<Spinner
		android:id="@+id/category"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="10dp"
	    android:textSize="18sp" />

    <AutoCompleteTextView
        android:id="@+id/autocomplete_nominate_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/nomfrag_wantItem"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/productImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/nomfrag_productImage"
        android:src="@drawable/ps4" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp" >
    
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/nomfrag_nominatedPrice"
		    android:textSize="18sp"
		    android:textStyle="bold" />
	
	    <EditText
	        android:id="@+id/nominatedPrice"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="left"
	        android:inputType="numberDecimal" />
    </LinearLayout>

	<Button
	    android:id="@+id/btnBeAChampion"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:background="@drawable/btn_green_matte"
	    style="@style/ButtonText"
	    android:text="@string/nomfrag_becomeAChampion" />

</LinearLayout>